<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:inputType="time"
        android:layout_gravity="center"
        android:id="@+id/profile_time"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" ~ 00:00"
        android:inputType="time"
        android:layout_gravity="center"
        android:paddingRight="32dp"
        android:id="@+id/profile_time_until"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.1"
        android:inputType="numberDecimal"
        android:layout_gravity="center"
        android:id="@+id/profile_value"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" Insulin Units"
        android:inputType="time"
        android:layout_gravity="center"
        android:id="@+id/profile_value_unit"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:id="@+id/profile_del"
        android:background="@drawable/close_circle"/>
</LinearLayout>